{
  "type": "module",
  "version": "1.0.1",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "node scripts/dev-theme.ts",
    "build": "node scripts/build-theme.ts",
    "build:pkg": "pnpm -r --filter=./packages/** --parallel run build",
    "docs:dev": "pnpm -C docs run dev",
    "docs:build": "pnpm -C docs run build",
    "typecheck": "vue-tsc --noEmit",
    "release": "bumpp package.json packages/*/package.json docs/package.json --all -x \"zx scripts/update-versions.mjs\"",
    "test": "vitest test",
    "lint": "pnpm exec biome check --write",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@clack/prompts": "catalog:",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "catalog:",
    "bumpp": "catalog:",
    "lefthook": "catalog:",
    "picocolors": "catalog:",
    "tona-vite": "workspace:*",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
